<h2><%= @post.title %></h2>
<p><%= @post.content %></p>
<p><em>Posted on <%= @post.created_at.strftime("%B %d, %Y") %></em></p>

<%= link_to "Update Post", edit_post_path(@post), class: 'btn btn-primary' %>
<%= link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger' %>
